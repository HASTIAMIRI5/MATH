        "Derivative-Gradient-Chain Rule"
      ],
      "metadata": {
        "id": "YbWrjHu59DI7"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "def get_derivative(func, x):\n",
        "\n",
        "  h = 0.0001\n",
        "  return (func(x+h) - func(x)) / h\n",
        "\n",
        "def f(x):\n",
        "  return x**2\n",
        "\n",
        "x = 3\n",
        "computed = get_derivative(f , x)\n",
        "actual = 2*x\n",
        "print(computed ,actual )"
      ],
